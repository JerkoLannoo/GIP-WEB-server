    <script>
var infoPopup = document.getElementById("info-pop-up")
var popupInfo=document.getElementById("pop-up-info")
var popup = document.getElementById("pop-up")
var popupBackground=document.getElementById("pop-up-background")
var popupBtn = document.getElementById("pop-up-btn")
var prices;
var users;
var settings;
getAllPrices()
getAllUsers()
getAllSettings()
function getAllUsers(){
    fetch("/admin/dashboard/get-all-users")
    .then(response=>response.json())
    .then(data=>{
        console.log(data)
        users=data
        createUserChart(data)
    }).catch(err=>{
        console.log(err)
        document.getElementById("users-info").innerText="Er ging iets mis. Kon niet alle gebruikers ophalen."
    })
}
function getAllPrices(){
    fetch("/admin/dashboard/get-all-prices")
    .then(response=>response.json())
    .then(data=>{
        console.log(data)
        prices=data
        createPricesChart()
    }).catch(err=>{
        console.log(err)
        document.getElementById("data-prices-container-info").style.color="red"
        document.getElementById("data-prices-container-info").innerText="Er ging iets mis. Kon niet alle prijzen ophalen."
    })
}
function getAllSettings() {
    fetch("/admin/dashboard/get-all-settings")
    .then(response=>response.json())
    .then(data=>{
        console.log(data)
        settings=data
        document.getElementById("max-users").value = data[0].max_users
        document.getElementById("max-beurten").value = data[0].max_beurten
        document.getElementById("max-saldo").value = data[0].max_saldo
        document.getElementById("allow-new-logins").checked = data[0].allow_logins
        document.getElementById("allow-new-beurten").checked = data[0].allow_new
    }).catch(err=>{
        console.log(err)
        document.getElementById("data-prices-container-info").style.color="red"
        document.getElementById("data-prices-container-info").innerText="Er ging iets mis. Kon niet alle netwerk instellingen ophalen."
    })
}
function changeNetworkSettings(){
    popup.style.display="block"
        popupBackground.style.display="block"
        popupInfo.innerText="Wacht even..."
        document.getElementById("pop-up-spinner").style.display="block"
    const xhr = new XMLHttpRequest();
        xhr.open("PUT", "/admin/dashboard/change-network-settings", true);
        xhr.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");
        var data = "maxUsers="+document.getElementById("max-users").value
        +"&maxBeurten="+document.getElementById("max-beurten").value
        +"&maxSaldo="+document.getElementById("max-saldo").value
        +"&allowNewLogins="+document.getElementById("allow-new-logins").checked
        +"&allowNewBeurten="+document.getElementById("allow-new-beurten").checked
        xhr.send(data)
        xhr.onreadystatechange = () => {
        document.getElementById("pop-up-spinner").style.display="none"
            if (xhr.readyState === XMLHttpRequest.DONE && xhr.status === 200) {
                    let response=JSON.parse(xhr.response)
                    if(response.success){
                     popupInfo.style.color="black"
                     popupInfo.innerText="De instellingen zijn aangepast."
                     getAllSettings()
                    }
                    else{
                popupInfo.style.color="red"
                popupInfo.innerText=response.msg
                popupBtn.innerText="Sluiten"
                    }
                }
                else{
                popupInfo.style.color="red"
                popupInfo.innerText="Er ging iets mis. Probeer het later opnieuw." 
                popupBtn.innerText="Sluiten"
                }
                }
}
function searchUsers(query){
let result=[];
qeury = query.toLowerCase()
if(query.length){
    for(let i=0; i<users.length;i++){
if(users[i].username.toLowerCase().match(query)){
    result.push(users[i])
}
}
createUserChart(result)
}
else createUserChart(users)
}
function createUserChart(users){
let element = document.getElementById("user-table-body")
element.innerHTML=""
for(let i=0; i<users.length;i++){
    let userRow = document.createElement("tr")
    let userRowUsername = document.createElement("td")
    userRowUsername.innerText = users[i].username
    userRow.appendChild(userRowUsername)
    let userRowEmail = document.createElement("td")
    userRowEmail.innerText = users[i].email
    userRow.appendChild(userRowEmail)
    let wijzigen = document.createElement("td")
    let wijzigenKnop = document.createElement("button")
    wijzigenKnop.setAttribute("class", "wijzigenknop")
   // wijzigenKnop.setAttribute("onclick", "showPricePopup("+i+", 'data')")
    wijzigenKnop.innerHTML = '<i class="fa-solid fa-pen-to-square"></i>'
    wijzigen.appendChild(wijzigenKnop)
    let active = document.createElement("td")
    if(users[i].active) active.innerHTML = '<i class="fa-solid fa-check"></i>'
    else active.innerHTML = '<i class="fa-solid fa-xmark"></i>'
    userRow.appendChild(active)
    let infoKnop = document.createElement("button")
    infoKnop.setAttribute("class", "wijzigenknop")
   // wijzigenKnop.setAttribute("onclick", "showPricePopup("+i+", 'data')")
    infoKnop.innerHTML = '<i class="fa-solid fa-info"></i>'
    wijzigen.appendChild(infoKnop)
    userRow.appendChild(wijzigen)
    element.appendChild(userRow)
}
}
function createPricesChart(){
let element = document.getElementById("data-prices-body")
element.innerHTML=""
for(let i=0; i<prices.data.length;i++){
    let pricerow = document.createElement("tr")
    let priceRowAmount = document.createElement("td")
    priceRowAmount.innerText = prices.data[i].data+" GB"
    pricerow.appendChild(priceRowAmount)
    let priceRowPrice = document.createElement("td")
    priceRowPrice.innerText = prices.data[i].price + "€"
    pricerow.appendChild(priceRowPrice)
    let wijzigen = document.createElement("td")
    let wijzigenKnop = document.createElement("button")
    wijzigenKnop.setAttribute("class", "wijzigenknop")
    wijzigenKnop.setAttribute("onclick", "showPricePopup("+i+", 'data')")
    wijzigenKnop.innerHTML = '<i class="fa-solid fa-pen-to-square"></i>'
    wijzigen.appendChild(wijzigenKnop)
    pricerow.appendChild(wijzigen)
    element.appendChild(pricerow)
}
element = document.getElementById("time-prices-body")
element.innerHTML=""
for(let i=0; i<prices.time.length;i++){
    let pricerow = document.createElement("tr")
    let priceRowAmount = document.createElement("td")
    priceRowAmount.innerText = formatTime(prices.time[i].time)
    pricerow.appendChild(priceRowAmount)
    let priceRowPrice = document.createElement("td")
    priceRowPrice.innerText = prices.time[i].price + "€"
    pricerow.appendChild(priceRowPrice)
    let wijzigen = document.createElement("td")
    let wijzigenKnop = document.createElement("button")
    wijzigenKnop.setAttribute("class", "wijzigenknop")
    wijzigenKnop.setAttribute("onclick", "showPricePopup("+i+", 'time')")
    wijzigenKnop.innerHTML = '<i class="fa-solid fa-pen-to-square"></i>'
    wijzigen.appendChild(wijzigenKnop)
    let delKnop = document.createElement("button")
    delKnop.setAttribute("class", "delKnop")
    delKnop.style.backgroundColor = "red"
    delKnop.style.borderColor = "red"
    delKnop.innerHTML = '<i class="fa-solid fa-trash-can"></i>'
    delKnop.setAttribute("onclick", "deleteBeurt("+prices.time[i].price+", "+prices.time[i].time+", 'time')")
    wijzigen.appendChild(delKnop)
    pricerow.appendChild(wijzigen)
    element.appendChild(pricerow)
}
}
function showPricePopup(index, type){
infoPopup.style.display="block"
document.getElementById("pop-up-background").style.display="block"
if(type==="data"){
    document.getElementById("info-pop-up-time").style.display = "none"
    document.getElementById("price-submit-button").removeAttribute("onclick")
    document.getElementById("price-submit-button").setAttribute("onclick", "this.parentElement.style.display='none';changeDataPrice()")
    document.getElementById("info-pop-up-data").innerText = "Data: "+prices.data[index].data + " GB"
    document.getElementById("info-pop-up-data").style.display = "block"
    document.getElementById("data-amount-hidden").value = prices.data[index].data
}
else if(type==="time"){
    document.getElementById("info-pop-up-data").style.display = "none"
    document.getElementById("info-pop-up-time").style.display = "none"
    document.getElementById("data-amount-hidden").value = prices.time[index].time
    document.getElementById("price-submit-button").setAttribute("onclick", "this.parentElement.style.display='none';changeTimePrice()")
}
else{
    document.getElementById("info-pop-up-data").style.display = "none"
    document.getElementById("info-pop-up-time").style.display = "block"
    document.getElementById("price-submit-button").setAttribute("onclick", "this.parentElement.style.display='none';addTime()")
}
}
function deleteBeurt(price, amount, type){
        popup.style.display="block"
        popupBackground.style.display="block"
        popupInfo.innerText="Wacht even..."
        document.getElementById("pop-up-spinner").style.display="block"
        const xhr = new XMLHttpRequest();
        xhr.open("PUT", "/admin/dashboard/delete-time-beurt", true);
        xhr.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");
        var data = "time="+amount+"&"
        +"price="+price
        xhr.send(data)
        xhr.onreadystatechange = () => {
        document.getElementById("pop-up-spinner").style.display="none"
            if (xhr.readyState === XMLHttpRequest.DONE && xhr.status === 200) {
                    let response=JSON.parse(xhr.response)
                    if(response.success){
                     popupInfo.style.color="black"
                     popupInfo.innerText="Deze beurt is verwijderd."
                     getAllPrices();
                    }
                    else{
                popupInfo.style.color="red"
                popupInfo.innerText=response.msg
                popupBtn.innerText="Sluiten"
                    }
                }
                else{
                popupInfo.style.color="red"
                popupInfo.innerText="Er ging iets mis. Probeer het later opnieuw." 
                popupBtn.innerText="Sluiten"
                }
                }
}
function formatTime(time){
   // console.log("time: "+time)
    if(time<24) return time +"h"
    else if(time>=24&&time<720) {
        console.log("tijd groter dan 24: "+time/24+time%24)
        if(time/24>1) return (time/24)+" Dagen"
        else return "1 Dag"
    }
    else if(time>=720) {
        console.log("tijd groter dan 24")
        if(time/720>1) return (time/720)+" Maanden"
        else return "1 Maand"
    }
}
function showTab(el, btn){
    for(let i=0;i<document.getElementById("main").querySelectorAll("div").length;i++) {
        document.getElementById("main").querySelectorAll("div")[i].style.display="none"
    } 
    for(let i=0;i<document.getElementById("topnav").querySelectorAll("a").length;i++) {
        document.getElementById("topnav").querySelectorAll("a")[i].style.backgroundColor="#036ffc"
    } 
    el.style.display="block"
    btn.style.backgroundColor="#4294ff"
    if(el.id=="saldo") document.getElementById("keuzemenu-bar").style.display="none"
}
