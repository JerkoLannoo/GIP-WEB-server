html,body{
    margin: 0;
   height: 100%;
}
p{
    font-size: 12pt;
}
.fa-solid.fa-xmark{
    cursor: pointer;
}
#topnav{
    margin: 0;
    padding: 0;
    background-color: #036ffc;
    width: 100%;
    overflow: hidden;
}
.selection-buttons{
    display: flex;
    background-color: #036ffc;
    cursor: pointer;
    border: none;
    transition-duration: 0.4s;
    margin: 5px;
    text-decoration: none;
    padding: 5px;
    border-radius: 5px;
    color: black;
