#topnav button:hover{
    background-color: #4294ff;
}
#main{
    display: block;
}
.account{
   h2{
    text-align: center;
   } 
}
.name-el{
    margin-left: 20px;
    text-align: left;
}
.value-el{
    position: absolute;
    left: 50%;
}
button{
    cursor: pointer;
    font-size: 13pt;
    border-radius: 5px;
    background-color: #036ffc;
    border-color: #036ffc;
    color: white;
}
button:hover{
    background-color: #4294ff;
    border-color: #4294ff;
}
